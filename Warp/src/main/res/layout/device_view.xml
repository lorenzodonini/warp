<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:gravity="center_horizontal" android:clickable="false">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deviceIcon" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:adjustViewBounds="false" android:src="@drawable/wifi_hotspot_disconnected" android:baselineAlignBottom="false"
            android:cropToPadding="false"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="QQQQQQQQQQQQQQ"
            android:id="@+id/deviceName" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="false" android:maxLength="14" android:autoText="false"
            android:textAlignment="center" android:layout_below="@+id/deviceIcon"
            />
    <ProgressBar
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deviceName"
            android:layout_centerHorizontal="true" android:progress="50" android:indeterminate="false"
            android:indeterminateOnly="false" android:id="@+id/deviceLoadingBar" android:focusableInTouchMode="false"/>
</RelativeLayout>